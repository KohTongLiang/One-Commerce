div(class="flex flex-col items-center w-full")
  div(class="space-y-4 w-[50%]")
    div(class="flex-1 space-y-4")
      p(class="text-2xl text-center")= title
      p(class="text-md")= description
    hr
    div(class='flex-1')
      each specObj, specType in specifications 
        p: em= specObj 
          div= specType
    hr
    div(class='flex-1')
      div 
        ul(class="flex flex-col space-y-3")
          each useCase in use_cases
            li: em= useCase
    div(class='flex-1')
      div(class="flex flex-wrap")
        each seoKeyword in seo 
          div(class="bg-indigo-400 p-1 m-1 rounded text-white")=  seoKeyword
